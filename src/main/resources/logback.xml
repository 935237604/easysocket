<configuration scan="true" scanPeriod="60 seconds">
	<property name="LOG_HOME" value="/applogs/im" />
	
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n
			</pattern>
		</encoder>
		<!-- 只接收ERROR级别的日志，注：如果填成INFO将只接收INFO级别的日志，其他任何级别的都不接收 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<appender name="Framework"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/frame/Framework-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>5MB</maxFileSize>
			<maxHistory>200</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="Main"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/main/Main-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>5MB</maxFileSize>
			<maxHistory>200</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="DataSource"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/datasource/DataSource-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>5MB</maxFileSize>
			<maxHistory>200</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<!-- 控制台输出，所有错误信息都在此输出 -->
	<root level="ERROR">
		<appender-ref ref="Console" />
	</root>

	<!-- 框架输出 -->
	<logger name="com.joe" level="DEBUG">
		<appender-ref ref="Framework" />
	</logger>
	
	<!-- netty输出 -->
	<logger name="io.netty" level="DEBUG">
		<appender-ref ref="Framework" />
	</logger>
	
	<!-- 主输出 -->
	<logger name="Main" level="DEBUG">
		<appender-ref ref="Main" />
	</logger>
	
	<!-- druid数据源logger输出 -->
	<logger name="druid.sql" level="DEBUG">
		<appender-ref ref="DataSource" />
	</logger>
</configuration>